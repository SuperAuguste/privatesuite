.background-lines-container {
    display :flex;
    width :100%;
    height :100%;
    position :fixed;
    left :0;
    top: 0;
}
.background-lines {
    width :calc(100% / 11);
    height :100%;
    margin: auto;
    display :inline-block;
    border: 0.1px solid white;
    }
#nav a {
    font-weight: bold;
    color: #2c3e50;
}

