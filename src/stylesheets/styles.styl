

.slice {
    padding: 3em 0;
}

html {
    overflow-x: hidden;
    cursor: url("../../imgs/cursor.png"), default;
}
* {
    position :relative;
}
h1, h3 {
    font-family: 'Campton Bold Italic';
    text-transform :uppercase;
}
h3 {
    font-size: 1.5em;
}
.title-shadow {
    position :absolute;
    padding :3px;
    opacity :0.3;
}
.title-container h1 {
    font-size: 4em;
    margin-bottom :0;
    text-align :left;
    margin-top :0;
    -webkit-text-stroke:1px black;
    -webkit-text-fill-color: transparent;
}

h4 {
    font-family: 'Campton SemiBold';
    font-size: 1.1em;
}
#nav {
    padding: 0px;
}
@font-face {
    font-family: 'Campton Bold Italic';
    src: url('../fonts/Campton/Campton-BoldItalic.ttf') format('truetype');
}
@font-face {
    font-family: 'Campton SemiBold';
    src: url('../fonts/Campton/Campton-SemiBold.ttf') format('truetype');
}

@font-face {
    font-family: 'TSTAR Mono Round';
    src: url('../fonts/TStarMono/TSTARMonoRoundRegular.otf') format('truetype');
}

html {
    background-color: rgb(240, 234, 244);
}
p, span {
    font-family: 'TSTAR Mono Round';
    font-size :15px;
    text-align :left;
}

.background-lines-container {
    z-index : -1;
}
a {
    text-decoration: none;
    cursor: url("../../imgs/cursor.png"), default;

}
